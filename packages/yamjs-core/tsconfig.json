{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ES2020",
    "outDir": "dist",
    "baseUrl": "."
  },
  "typeRoots": [
    "node_modules/@graal-types",
    "src/types",
    "@yam-js/graal-type-introspection/JavaTypes"
  ],
  "include": [
    "src/**/*",
    "../../node_modules/@graal-types",
    "../../node_modules/@yam-js/graal-type-introspection/JavaTypes"
  ],
  "files": ["src/types/global.d.ts"]
}
