{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "target": "ES2020",
    "outDir": "dist",
    "baseUrl": "."
  },
  "typeRoots": ["node_modules/@graal-types", "@yam-js/graal-type-introspection"],
  "include": ["src/**/*", "../../node_modules/@graal-types"]
}
